<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/event_item">

    <ImageView
        android:id="@+id/eventDotImageView"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/ic_dot_black" />

    <TextView
        android:id="@+id/eventTimeNew"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:text="12:30"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/eventTitleNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_toEndOf="@+id/eventTimeNew"
        android:layout_toStartOf="@+id/eventEditButtonNew"
        android:ellipsize="end"
        android:lines="1"
        android:text="Rdv Rendez-vous"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/eventDescriptionNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/eventTitleNew"
        android:layout_below="@id/eventTitleNew"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/eventTimeNew"
        android:text="Description du RDV si besoin" />

    <ImageButton
        android:id="@+id/eventEditButtonNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@null"
        app:srcCompat="@android:drawable/ic_menu_edit" />

    <TextView
        android:id="@+id/eventIdNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="id"
        android:textAlignment="center"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/eventStartDateNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

</RelativeLayout>